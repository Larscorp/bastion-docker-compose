# https://github.com/pi-hole/docker-pi-hole/blob/master/README.md

networks:
  traefik-net:
    external: true

services:
  pihole:
    image: pihole/pihole:latest
    container_name: pihole
    restart: unless-stopped
    networks:
    - traefik-net
#    network_mode: host
#    cap_add:
#    - NET_ADMIN
    ports:
    - "53:53/tcp"
    - "53:53/udp"
#    - "67:67/udp"
#    - "80:80/tcp"
    environment:
    - TZ=Europe/Paris
    volumes:
    - './config/pihole:/etc/pihole'
    - './config/dnsmasq.d:/etc/dnsmasq.d'
    labels:
    - "traefik.enable=true"
    - "traefik.http.routers.pihole.rule=Host(`dns.larsluph.dev`)"

